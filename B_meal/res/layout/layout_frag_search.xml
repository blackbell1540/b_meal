<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:background="#e9f2e6" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="320dp"
            android:layout_height="37dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/search_bar1" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/rg_icon_1" />

            <EditText
                android:id="@+id/editKeyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="ex) 홍대, 샌드위치"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="#393939"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonSearch"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_search_cancle"
                android:text="@null" />

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listKeyword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" >

    </ListView>

</LinearLayout>
