<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_back" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="111dp" >

            <Button
                android:id="@+id/buttonBack"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/button_back2"
                android:text="@null" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="154dp"
                android:layout_marginTop="18dp"
                android:text="로그인"
                android:textColor="#ffffff"
                android:textSize="19sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="207dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="138dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginBottom="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/login_picture" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/white_ring" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="22dp"
                    android:text="@string/login_str1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="89dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/login_str2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="360dp"
                android:layout_height="168dp"
                android:layout_gravity="bottom"
                android:background="#4dffffff"
                android:scaleType="fitXY"
                android:src="@null" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="288dp"
            android:layout_height="42dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/login_input_box" >

            <EditText
                android:id="@+id/editUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="14dp"
                android:background="@null"
                android:ems="10"
                android:hint="E-mail"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#4dffffff"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="288dp"
            android:layout_height="42dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_input_box" >

            <EditText
                android:id="@+id/editUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:background="@null"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#66ffffff"
                android:textSize="12sp" />

        </FrameLayout>

        <Button
            android:id="@+id/buttonEmailLogin"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_email_login"
            android:text="@null" />

        <Button
            android:id="@+id/buttonPW"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="23dp"
            android:background="@null"
            android:text="@string/buttonFindPW"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="288dp"
            android:layout_height="1dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="14dp"
            android:background="#ffffff"
            android:text="@null" />

        <Button
            android:id="@+id/buttonFacebookLogin"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="288dp"
            android:layout_height="42dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/button_facebook_login"
            android:text="@null" />
    </LinearLayout>

</ScrollView>
