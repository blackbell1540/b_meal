<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_back"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="360dp"
        android:layout_height="81dp"
        android:background="@null" >

        <Button
            android:id="@+id/buttonBack"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_back2"
            android:text="@null" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="@string/titleFindPW"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="19sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="259dp"
        android:layout_height="32dp"
        android:layout_marginLeft="39dp"
        android:background="@drawable/icon_email"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:ems="10"
            android:hint="E-mail을 입력해주세요"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#66ffffff"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonFind"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_find_email"
        android:text="@null" />

</LinearLayout>
