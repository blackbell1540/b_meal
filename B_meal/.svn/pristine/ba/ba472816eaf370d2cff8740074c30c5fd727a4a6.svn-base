<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_back"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="360dp"
        android:layout_height="53dp"
        android:background="@null" >

        <Button
            android:id="@+id/buttonBack"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_back2"
            android:text="@null" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="18dp"
            android:text="@string/titleHelp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="19sp" />

    </FrameLayout>

    <ExpandableListView
        android:id="@+id/expanHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="#ffffff"
        android:divider="#ffffff"
        android:groupIndicator="@null"
        android:indicatorLeft="@null"
        android:indicatorRight="@null"
        android:scrollbars="@null" >

    </ExpandableListView>

</LinearLayout>
