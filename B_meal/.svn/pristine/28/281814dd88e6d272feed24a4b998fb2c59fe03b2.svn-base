<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:background="@drawable/option_back"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null" >

        <Button
            android:id="@+id/buttonBack"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_back2"
            android:text="@null" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="127dp"
            android:layout_marginTop="18dp"
            android:text="개인정보 수정"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="19sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/picture_not" />
     
        <com.tacademy.b_meal.login.MLRoundedImageView
            android:id="@+id/imageUserProfile"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/picture_not"
            android:visibility="gone" />
        
    </FrameLayout>

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="193dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mody_profile_box" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/FrameLayout2"
                android:layout_width="259dp"
                android:layout_height="32dp" >

                <ImageView
                    android:id="@+id/imageNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/name" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:text="name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayout3"
                android:layout_width="259dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/imageEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_email" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:text="email"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="259dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/imageMale"
                    android:layout_width="119dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/m_not_tap" />

                <ImageView
                    android:id="@+id/imageFemale"
                    android:layout_width="119dp"
                    android:layout_height="32dp"
                    android:src="@drawable/w_not_tap" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/FrameLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/imageBirth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/day" />

                <TextView
                    android:id="@+id/textBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:text="19990912"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp" >

        <Button
            android:id="@+id/buttonChangePW"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="39dp"
            android:background="@drawable/icon_password"
            android:text="@null" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="6dp"
            android:text="비밀번호 변경"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginRight="31dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/go" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="259dp"
            android:layout_height="32dp"
            android:layout_marginLeft="39dp"
            android:background="@drawable/icon_delete_account"
            android:text="@null" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="6dp"
            android:text="계정 삭제"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginRight="31dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/go" />

    </FrameLayout>

</LinearLayout>
